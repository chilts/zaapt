#!/usr/bin/make -f
## ----------------------------------------------------------------------------
## debian/rules : package script for zaapt
## ----------------------------------------------------------------------------

## ----------------------------------------------------------------------------
## uncomment this to turn on verbose mode
#export DH_VERBOSE=1

## ----------------------------------------------------------------------------
## targets

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp install-stamp
	[ ! -f Makefile ] || $(MAKE) clean
	dh_clean

build:	build-stamp
build-stamp:
	dh_testdir
	[ ! -f Makefile ] || $(MAKE)
	touch build-stamp

install:	install-stamp
install-stamp:	build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	touch install-stamp

binary-indep:	build install
	dh_testdir
	dh_testroot
	dh_install -Xsvn
	dh_installdocs
	dh_installman
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_perl
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:

binary:	binary-indep binary-arch

.PHONY:	clean build install binary-indep binary-arch binary

## ----------------------------------------------------------------------------
