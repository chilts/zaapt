<%args>
    $contents
</%args>
<%init>
    return unless ref $contents eq 'ARRAY';
</%init>
<h1>List of Contents...</h1>
% if ( @$contents ) {
    <ul>
%     foreach my $c ( @$contents ) {
        <li>
            <a href="?a=p_list&amp;c_name=<% $c->{c_name} | h %>"><% $c->{c_name} | h %></a>
            [ <a href="?a=p_add&amp;c_name=<% $c->{c_name} | h %>">add page</a>
            | <a href="?a=c_del&amp;c_name=<% $c->{c_name} | h %>">del section</a>
            ]


        </li>
%     }
    </ul>
% } else {
    <p>There are no content sections yet.</p>
% }

<h2>Add Section...</h2>
<&  /fli/common/form.mhtml, elements => [
        { type => 'hidden', name => 'a', value => 'c_ins' },
        { type => 'text', field => 'Name', name => 'c_name', size => 60, value => '' },
        { type => 'submit', field => 'Actions', value => 'Add Section' },
    ]
&>
