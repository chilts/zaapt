<%args>
    $c_name
    $pages
</%args>
<%init>
    return unless ref $pages eq 'ARRAY' and @$pages;
    return unless defined $s_name;
</%init>
<h2>Entries from section: '<% $s_name | h %>'</h2>

<p>
Actions :
[
<a href="?a=p_add&amp;s_name=<% $s_name | h %>">add page</a>
]
</p>

% if ( @$pages ) {
%     foreach my $p ( @$pages ) {
    <p>
         <% $p->{p_name} | h %><br />
         [
         <a href="?a=p_edit&amp;s_name=<% $p->{p_section_name} | h %>&amp;p_id=<% $p->{p_id} | h %>">edit</a>
         |
         <a href="?a=p_del&amp;s_name=<% $p->{p_section_name} | h %>&amp;p_id=<% $p->{p_id} | h %>">del</a>         
         ]
    </p>
%     }
% } else {
    <p>There are currently no pages in this section.</p>
% }
