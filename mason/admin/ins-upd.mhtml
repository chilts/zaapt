%# ----------------------------------------------------------------------------
<%args>
    $row
    $l => undef
    $ins => undef
    $upd => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    return unless ref $row eq 'HASH';
    if ( defined $l ) {
        $ins = $l . "_inserted";
        $upd = $l . "_updated";
    }
</%init>
%# ----------------------------------------------------------------------------
<p class="footnote">
    <strong>ins</strong>: <% $row->{$ins} | h %>
    |
    <strong>upd</strong>: <% $row->{$upd} | h %>
</p>
%# ----------------------------------------------------------------------------
