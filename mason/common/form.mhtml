%         if ( defined $e->{cancel_js} ) {
            <button class="button" type="button" onclick="<% $e->{cancel_js} %>">Cancel</button>\
%         }

%     } elsif ( $e->{type} eq 'button' ) {
            <button type="button" onClick="<% $e->{onclick} | h %>"><% $e->{value} | h %></button>\

