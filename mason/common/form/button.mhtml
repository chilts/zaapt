%# ----------------------------------------------------------------------------
<%doc>

    Just requires an 'onclick' to be defined.

</%doc>
%# ----------------------------------------------------------------------------
<%args>
    $e
    $value => ''
</%args>
%# ----------------------------------------------------------------------------
<button\
 type="button"\
<% defined $e->{id} ? " id=\"$e->{id}\"" : '' %>\
% if ( defined $e->{name} ) {
 name="<% $e->{name} | h %>"\
% }
 onclick="<% $e->{onclick} | h %>">\
<% $e->{value} | h %>\
</button>\
%# ----------------------------------------------------------------------------
