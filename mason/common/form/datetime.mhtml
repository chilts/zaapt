%# ----------------------------------------------------------------------------
<%doc>

    Requires the input to be of the form 'yyyy-mm-dd hh:mm:ss', 19 characters

</%doc>
%# ----------------------------------------------------------------------------
<%args>
    $e
    $value => ''
</%args>
%# ----------------------------------------------------------------------------
<input\
 type="text"\
<% defined $e->{id} ? " id=\"$e->{id}\"" : '' %>\
 name="<% $e->{name} | h %>_date"\
 size="21"\
 maxlength="19"\
 value="<% $value | h %>"\
 /> yyyy-mm-dd hh:mm::ss
%# ----------------------------------------------------------------------------
