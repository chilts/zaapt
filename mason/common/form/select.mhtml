%# ----------------------------------------------------------------------------
<%args>
    $e
    $value => ''
</%args>
%# ----------------------------------------------------------------------------
<select\
<% defined $e->{id} ? " id=\"$e->{id}\"" : '' %>\
 name="<% $e->{name} | h %>"\
>
% foreach my $o ( @{$e->{options}} ) {
    <option value="<% $o->{value} | h %>"<% $value eq $o->{value} ? ' selected="selected"' : '' %>>\
<% $o->{text} | h %>\
    </option>
% }
</select>
%# ----------------------------------------------------------------------------
