%# ----------------------------------------------------------------------------
<%args>
    $name
    $title => undef
</%args>
%# ----------------------------------------------------------------------------
<%once>
    my $map = {};
</%once>
%# ----------------------------------------------------------------------------
<%init>
    return unless exists $map->{$name};
</%init>
%# ----------------------------------------------------------------------------
<img src="/static/<% $map->{$name} %>.png" \
% if ( defined $title ) {
alt="<% $title | h %>" title="<% $title | h %>" \
% }
/>\
%# ----------------------------------------------------------------------------
