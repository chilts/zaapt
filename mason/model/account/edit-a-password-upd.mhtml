%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $id
    $a_password => undef
    $a_repeat   => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    die "The admin interface needs to pass the $id of the logged in person to this component."
        unless defined $id;

    # do some checking
    my $err = [];

    unless ( Zaapt::Utils::Valid::is_min_length($a_password, 6, 'Password') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    unless ( $a_password eq $a_repeat ) {
        push @$err, "'Password' and 'Repeat' are not the same";
    }

    unless ( @$err ) {
        my $model = $zaapt->get_model('Account');
        $model->upd_password({
            a_password => $a_password,
            a_id       => $id,
        });
        $m->redirect('edit.html');
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<h1>Change your Password</h1>

<p><a href="edit.html">&laquo; Back to Account Admin</a></p>

<h2>Account: Change Password</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit-a-password-upd.html', elements => [
        { type => 'password', field => 'Password', name => 'a_password', size => 40, value => '' },
        { type => 'password', field => 'Repeat', name => 'a_repeat', size => 40, value => '' },
        { type => 'submit', field => 'Actions', value => 'Change Password', cancel => 'edit.html' },
    ]
&>
%# ----------------------------------------------------------------------------
