%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $p_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    # need 'super'
    $m->redirect("edit.html") unless exists $perms->{super};

    my $model = $zaapt->get_model('Account');
    my $permission = $model->sel_permission({ p_id => $p_id });

    $m->redirect("edit.html") unless defined $permission;

    $model->del_permission({ p_id => $p_id });

    $m->redirect("edit-p-list.html");
    return;
</%init>
%# ----------------------------------------------------------------------------
