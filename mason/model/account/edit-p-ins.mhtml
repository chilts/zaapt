%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $p_name        => ''
    $p_description => ''
</%args>
%# ----------------------------------------------------------------------------
<%init>
    $m->redirect('edit-p-list.html') unless exists $my_perms->{super};

    # do some checking
    my $err = [];

    unless ( Zaapt::Utils::Valid::is_valid_name($p_name, 'Name') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $p_description = Zaapt::Utils::Conv::remove_cr( $p_description );

    unless ( @$err ) {
        my $model = $zaapt->get_model('Account');
        $model->ins_permission({
            p_name        => $p_name,
            p_description => $p_description,
        });
        $m->redirect('edit-p-list.html');
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Permission</h1>

<p><a href="edit-p-list.html">&laquo; Back to Permission List</a></p>

<h2>Permission: ?</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit-p-ins.html', elements => [
        { type => 'text', field => 'Name', name => 'p_name', size => 40, value => $p_name },
        { type => 'textarea', field => 'Description', name => 'p_description', rows => 10, cols => 40, value => $p_description },
        { type => 'submit', field => 'Actions', value => 'Add Permission', cancel => 'edit-p-list.html' },
    ]
&>
%# ----------------------------------------------------------------------------
