%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Account');
    my $accounts_raw = $model->sel_privilege_all_by_account();
    my $accounts = {};
    foreach my $row ( @$accounts_raw ) {
       my $a_username = $row->{a_username};
       foreach my $key ( qw(a_id a_username a_firstname a_lastname) ) {
           $accounts->{$a_username}{$key} = $row->{$key};
       }
       push @{$accounts->{$a_username}{roles}}, $row;
    }
</%init>
%# ----------------------------------------------------------------------------
<h1>Privilege List</h1>

% if ( exists $my_roles->{super} ) {
<p>
    * <a href="#">Add Privilege (ToDo) &raquo;</a><br />
</p>
% }

<&| /zaapt/common/admin/table-edit.mhtml, title => 'Privileges by Account' &>

% my $row = 1;
% foreach my $account ( map { $accounts->{$_} } sort keys %$accounts ) {
    <tr class="r<% $row=1-$row %>">
        <td>
            (<% $account->{a_id} | h %>) <strong><% $account->{a_username} | h %></strong> - <% $account->{a_firstname} | h %> <% $account->{a_lastname} | h %><br />
            <ul>
%     foreach my $role ( @{$account->{roles}} ) {
                <li>(<% $role->{r_id} | h %>) <% $role->{r_name} | h %> [<a href="edit-p-del.html?p_id=<% $role->{p_id} | u %>&amp;from=account">delete</a>]</li>
%     }
            </ul>
        </td>
        <td>
            * No Actions
        </td>
    </tr>
% }

</&>
%# ----------------------------------------------------------------------------
