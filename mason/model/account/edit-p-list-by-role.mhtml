%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Account');
    my $roles_raw = $model->sel_privilege_all_by_role();
    my $roles = {};
    foreach my $row ( @$roles_raw ) {
       my $r_name = $row->{r_name};
       foreach my $key ( qw(r_id r_name r_description) ) {
           $roles->{$r_name}{$key} = $row->{$key};
       }
       push @{$roles->{$r_name}{accounts}}, $row;
    }
</%init>
%# ----------------------------------------------------------------------------
<h1>Privilege List</h1>

% if ( exists $my_roles->{super} ) {
<p>
    * <a href="#">Add Privilege (ToDo) &raquo;</a><br />
</p>
% }

<&| /zaapt/common/admin/table-edit.mhtml, title => 'Privileges by Role' &>

% my $row = 1;
% foreach my $role ( map { $roles->{$_} } sort keys %$roles ) {
    <tr class="r<% $row=1-$row %>">
        <td>
            (<% $role->{r_id} | h %>) <strong><% $role->{r_name} | h %></strong> - <% $role->{r_description} | h %><br />
            <ul>
%     foreach my $account ( @{$role->{accounts}} ) {
                <li>(<% $account->{a_id} | h %>) <% $account->{a_username} | h %> [<a href="edit-p-del.html?p_id=<% $account->{p_id} | u %>&amp;from=role">delete</a>]</li>
%     }
            </ul>
        </td>
        <td>
            * No Actions
        </td>
    </tr>
% }

</&>
%# ----------------------------------------------------------------------------
