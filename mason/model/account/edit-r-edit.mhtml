%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $r_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    $m->redirect('edit-r-list.html') unless exists $my_perms->{super};

    my $model = $zaapt->get_model('Account');
    my $role = $model->sel_role({ r_id => $r_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit-r-list.html') unless defined $role;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit a Role</h1>

<p><a href="edit-r-list.html">&laquo; Back to Role List</a></p>

<h2>Role: <% $role->{r_name} | h %></h2>

<& /zaapt/common/form.mhtml, action => 'edit-r-upd.html', elements => [
        { type => 'hidden', name => 'r_id', value => $r_id },
        { type => 'text', field => 'Name', name => 'r_name', size => 40, value => $role->{r_name} },
        { type => 'textarea', field => 'Description', name => 'r_description', rows => 10, cols => 40, value => $role->{r_description} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit-r-list.html' },
    ]
&>

%# ----------------------------------------------------------------------------
