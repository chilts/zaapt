%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $a_username
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Account');

    my $account = $model->sel_account_using_username({ a_username => $a_username });
    unless ( defined $account ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }

    # TODO:
    # When you override this component, you might want to put in things like
    # - profile information
    # - number of forum posts
    # - info you have gathered from other parts of the site
    # (but make sure it is all PUBLIC information only)
</%init>
