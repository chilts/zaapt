%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $a_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Account');

    my $account = $model->sel_account({ a_id => $a_id });
    unless ( defined $account ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<div class="z_profile">
<h1>Account Info</h1>

<&  /zaapt/common/table.mhtml, rows => [
        { field => 'Username', value => $account->{a_username} },
        { field => 'Joined', value => $account->{a_inserted} },
    ]
&>
</div>

%# ----------------------------------------------------------------------------
