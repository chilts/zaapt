%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Account');

    my $account = $model->sel_account({ a_id => $id });
    unless ( defined $account ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<& render-view-info.mhtml,
    account => $account
&>
%# ----------------------------------------------------------------------------
