%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $id
    $page
</%args>
%# ----------------------------------------------------------------------------
<%init>
    # check for the index page
    if ( $page eq 'index' ) {
        $m->comp('/zaapt/model/account/view-index.mhtml', zaapt => $zaapt, id => $id);
    }
    elsif ( $page eq 'info' ) {
        $m->comp('/zaapt/model/account/view-info.mhtml', zaapt => $zaapt, id => $id);
    }
    else {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
    return;
</%init>
%# ----------------------------------------------------------------------------
