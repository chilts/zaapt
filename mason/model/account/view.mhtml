%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $a_id
    $page
</%args>
%# ----------------------------------------------------------------------------
<%init>
    # check for the index page
    if ( $page =~ m{ \A index \z}xms ) {
        $m->comp('/zaapt/model/account/view-index.mhtml', zaapt => $zaapt, a_id => $a_id);
    }
    else {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
    return;
</%init>
