%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $roles = $zaapt->get_model('Account')->sel_all_roles();
    my @options = map { { value => $_->{r_id}, text => $_->{r_name} } } @$roles;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Blog</h1>

<p><a href="edit-b-list.html">&laquo; Back to Blog List</a></p>

<h2>Blog: ?</h2>

<& /zaapt/common/form.mhtml, action => 'edit-b-ins.html', elements => [
        { type => 'text', field => 'Name', name => 'b_name', size => 40, value => '' },
        { type => 'text', field => 'Title', name => 'b_title', size => 40, value => '' },
        { type => 'textarea', field => 'Description', name => 'b_description', rows => 10, cols => 40, value => '' },
        { type => 'text', field => 'Show', name => 'b_show', size => 3, value => 7 },
        { type => 'check', field => 'Moderate', name => 'b_moderate', checked => 0 },
        { type => 'note', value => "Note: This forces moderation of all comments and trackbacks." },
        { type => 'check', field => 'Allow Comments', name => 'b_comment', checked => 0 },
        { type => 'check', field => 'Allow Trackbacks', name => 'b_trackback', checked => 0 },
        { type => 'select', field => 'Admin Role', name => '_admin', options => \@options },
        { type => 'note', value => "Note: Allows this user to delete the entire blog." },
        { type => 'select', field => 'View Role', name => '_view', options => \@options },
        { type => 'note', value => "Note: Allows this user to view all blog entries." },
        { type => 'select', field => 'Edit Role', name => '_edit', options => \@options },
        { type => 'note', value => "Note: Allows this user to add, edit and delete blog entries and labels." },
        { type => 'select', field => 'Publish Role', name => '_publish', options => \@options },
        { type => 'note', value => "Note: Allows this user to publish blog entries (not yet implemented)." },
        { type => 'select', field => 'Comment Role', name => '_comment', options => \@options },
        { type => 'note', value => "Note: Allows this user to moderate comments." },
        { type => 'select', field => 'Trackback Role', name => '_trackback', options => \@options },
        { type => 'note', value => "Note: Allows this user to moderate trackbacks." },
        { type => 'submit', field => 'Actions', value => 'Add Blog', cancel => 'edit-b-list.html' },
    ]
&>

