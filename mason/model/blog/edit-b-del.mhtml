%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $b_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blog = $model->sel_blog({ b_id => $b_id });

    $m->redirect('edit-b-list.html') unless defined $blog;

    $m->redirect('edit-b-list.html') unless exists $my_roles->{$blog->{_admin}};

    $model->del_blog({ b_id => $b_id });

    $m->redirect("edit-b-list.html");
    return;
</%init>
