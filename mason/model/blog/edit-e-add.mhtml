%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $b_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blog = $model->sel_blog({ b_id => $b_id });
    unless ( defined $blog ) {
        $m->redirect('edit-b-list.html');
        return;
    }
    my $page_types = $zaapt->get_model('Common')->sel_all_types();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add an Entry</h1>

<p><a href="edit-e-list.html?b_id=<% $b_id | u %>">&laquo; Back to Entry List</a></p>

<h2>Blog: '<% $blog->{b_title} | h %>'</h2>

<& /zaapt/common/form.mhtml, action => 'edit-e-ins.html', elements => [
        { type => 'hidden', name => 'b_id', value => $b_id },
        { type => 'read', field => 'Blog', name => 'b_name', value => $blog->{b_name} },
        { type => 'text', field => 'Name', name => 'e_name', size => 40, value => '' },
        { type => 'text', field => 'Title', name => 'e_title', size => 40, value => '' },
        { type => 'textarea', field => 'Intro', name => 'e_intro', rows => 5, cols => 40, value => '' },
        { type => 'read', value => 'Note: The intro field is always plain text.' },
        { type => 'textarea', field => 'Article', name => 'e_article', rows => 10, cols => 40, value => '' },
        { type => 'select', field => 'Type', name => 't_id', options => \@options },
        { type => 'check', field => 'Draft', name => 'e_draft', checked => 0 },
        { type => 'check', field => 'Comment', name => 'e_comment', checked => 0 },
        { type => 'check', field => 'Trackback', name => 'e_trackback', checked => 0 },
        { type => 'submit', field => 'Actions', value => 'Add', cancel => 'edit-e-list.html?b_id=' . uri_escape($b_id) },
    ]
&>

% if ( 0 ) {
<pre>
% print Data::Dumper->Dump([\@options], ['o']);
</pre>
% }

%# ----------------------------------------------------------------------------
