%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $e_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $entry = $model->sel_entry({ e_id => $e_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit-b-list.html') unless defined $entry;
    $m->redirect('edit-b-list.html') unless exists $my_perms->{$entry->{_admin}};

    $model->del_entry({ e_id => $e_id });

    $m->redirect("edit-e-list.html?b_id=" . uri_escape($entry->{b_id}));
    return;
</%init>
%# ----------------------------------------------------------------------------
