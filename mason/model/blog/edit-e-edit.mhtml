%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $e_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $entry = $model->sel_entry({ e_id => $e_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit-b-list.html') unless defined $entry;
    $m->redirect('edit-e-list.html?b_id=' . uri_escape($entry->{b_id})) unless exists $my_perms->{$entry->{_edit}};

    my $page_types = $zaapt->get_model('Common')->sel_type_all();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit an Entry</h1>

<p><a href="edit-e-list.html?b_id=<% $entry->{b_id} | u %>">&laquo; Back to Entry List</a></p>

<h2>Blog: '<% $entry->{b_title} | h %>'</h2>

<& /zaapt/common/form.mhtml, action => 'edit-e-upd.html', elements => [
        { type => 'hidden', name => 'e_id', value => $entry->{e_id} },
        { type => 'read', field => 'Blog', name => 'b_name', value => $entry->{b_name} },
        { type => 'text', field => 'Name', name => 'e_name', size => 40, value => $entry->{e_name} },
        { type => 'text', field => 'Title', name => 'e_title', size => 40, value => $entry->{e_title} },
        { type => 'textarea', field => 'Intro', name => 'e_intro', rows => 5, cols => 40, value => $entry->{e_intro} },
        { type => 'read', value => 'Note: The intro field is always plain text.' },
        { type => 'textarea', field => 'Article', name => 'e_article', rows => 10, cols => 40, value => $entry->{e_article} },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $entry->{t_id} },
        { type => 'check', field => 'Draft', name => 'e_draft', checked => $entry->{e_draft} },
        { type => 'check', field => 'Comment', name => 'e_comment', checked => $entry->{e_comment} },
        { type => 'check', field => 'Trackback', name => 'e_trackback', checked => $entry->{e_trackback} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit-e-list.html?b_id=' . uri_escape($entry->{b_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
