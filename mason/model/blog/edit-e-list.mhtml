%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $b_id
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blog = $model->sel_blog({ b_id => $b_id });
    unless ( defined $blog ) {
        $m->redirect('edit-b-list.html');
        return;
    }
    $m->redirect('edit-b-list.html') unless exists $my_roles->{$blog->{_view}};
    my $entries = $model->sel_entry_all_in({ b_id => $b_id });
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Entry List</h1>

<p><a href="edit-b-list.html">&laquo; Back to Blog List</a></p>

<h2>Blog: <% $blog->{b_name} | h %> - '<% $blog->{b_title} | h %>'</h2>

% if ( exists $my_roles->{$blog->{_admin}} ) {
<p>
    * <a href="edit-e-add.html?b_id=<% $blog->{b_id} | u %>">Add Entry &raquo;</a><br />
    * <a href="edit-c-list.html?b_id=<% $blog->{b_id} | u %>">Audit Comments &raquo;</a><br />
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Entry</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $entry ( @$entries ) {
        <tr class="r<% $row=1-$row %>">
            <td>
                <% $entry->{e_name} | h %> (<% $entry->{e_inserted} | h %>)<br />
                <% $entry->{e_comments} || '0' | h %> comments, <% $entry->{e_trackbacks} || '0' | h %> trackbacks<br />
            </td>
            <td>
%         if ( exists $my_roles->{$blog->{_edit}} ) {
                * <a href="edit-e-edit.html?e_id=<% $entry->{e_id} | u %>">Edit Entry</a><br />
                * <a href="edit-l-edit.html?e_id=<% $entry->{e_id} | u %>">Edit Labels</a><br />
%             if ( exists $my_roles->{$blog->{_admin}} ) {
                * <a href="edit-e-del.html?e_id=<% $entry->{e_id} | u %>">Delete</a><br />
%             }
%         } else {
                -
%         }
            </td>
        </tr>
% }
% unless ( @$entries ) {
        <tr class="r0">
            <td>No entries in this blog!</td>
            <td>
                * <a href="edit-e-add.html?b_id=<% $blog->{b_id} | u %>">Add Entry</a>
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
