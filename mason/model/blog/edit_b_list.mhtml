%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blogs = $model->sel_blog_all();
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Blog List</h1>

% if ( exists $my_roles->{super} ) {
<p>
    * <a href="edit_b_add.html">Add Blog &raquo;</a><br />
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Name</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $blog ( @$blogs ) {
%     next unless exists $my_roles->{$blog->{_view}};
        <tr class="r<% $row=1-$row %>">
            <td>
                <% $blog->{b_name} | h %>
            </td>
            <td>
%         if ( exists $my_roles->{$blog->{_edit}} ) {
                * <a href="edit_e_add.html?b_id=<% $blog->{b_id} | u %>">Add Entry</a><br />
                * <a href="edit_e_list.html?b_id=<% $blog->{b_id} | u %>">Entry List</a><br />
%             if ( exists $my_roles->{$blog->{_admin}} ) {
                * <a href="edit_b_del.html?b_id=<% $blog->{b_id} | u %>">Delete</a><br />
%             }
%         } else {
                -
%         }
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
