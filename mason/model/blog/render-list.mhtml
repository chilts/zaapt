<%args>
    $entries
</%args>
%# ----------------------------------------------------------------------------
<%init>
    return unless defined $entries;

    $entries = [ $entries ] unless ref $entries eq 'ARRAY';

    foreach my $entry ( $entries ) {
        $m->comp('render-entry-summary.mhtml', entry => $entry);
    }
    return;
</%init>
