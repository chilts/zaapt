%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $b_name
    $from
    $for
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blog = $model->sel_blog_using_name({ b_name => $b_name });
    unless ( defined $blog ) {
        die "Blog '$b_name' not found.";
        return;
    }
    my $entries = $model->sel_archive_entries({ b_id => $blog->{b_id}, _from => $from, _for => $for });
</%init>
%# ----------------------------------------------------------------------------
<& render-entries.mhtml, entries => $entries &>
%# ----------------------------------------------------------------------------
