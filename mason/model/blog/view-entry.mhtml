%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $b_name
    $e_name
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');

    my $blog = $model->sel_blog_using_name({ b_name => $b_name });
    unless ( defined $blog ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }

    my $entry = $model->sel_entry_in_blog({ b_id => $blog->{b_id}, e_name => $e_name });
    unless ( defined $entry ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<div class="z_blog">

<& render-entry.mhtml, entry => $entry &>

</div>
%# ----------------------------------------------------------------------------
