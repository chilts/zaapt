%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $b_name
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Blog');
    my $blog = $model->sel_blog_using_name({ b_name => $b_name });
    unless ( defined $blog ) {
        die "Blog '$b_name' not found.";
        return;
    }
    my $entries = $model->sel_entry_latest({ b_id => $blog->{b_id}, _limit => $blog->{b_show} });
</%init>
