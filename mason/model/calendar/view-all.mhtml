%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $page => ''
</%args>
%# ----------------------------------------------------------------------------
<%init>
    if ( $page eq 'index' ) {
        # main index page
        $m->comp('/zaapt/model/calendar/view-all-index.mhtml',
            zaapt  => $zaapt,
        );
    }
    else {
        $m->clear_buffer();
        $m->abort(404);
    }

    return;
</%init>
%# ----------------------------------------------------------------------------
