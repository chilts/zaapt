%# ----------------------------------------------------------------------------
<%doc>
    This is the insert page for the 'Content' model.
</%doc>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $roles
    $c_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Content');
    my $content = $model->sel_content({ c_id => $c_id });
    unless ( defined $content ) {
        $m->redirect('edit.html');
        return;
    }
    my $page_types = $model->sel_all_types();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Editing: 'Content'</h1>

% if ( 0 ) {
<pre>
% print Data::Dumper->Dump([\@options], ['o']);
</pre>
% }

<p><a href="edit_p_list.html?c_id=<% $c_id | h %>">&lt;&lt; Back to Page List</a></p>

<h2>Add a Page to <% $content->{c_name} | h %></h2>

<&  /zaapt/common/form.mhtml, action => 'edit_p_ins.html', elements => [
        { type => 'hidden', name => 'c_id', value => $c_id },
        { type => 'text', field => 'Name', name => 'p_name', size => 40, value => '' },
        { type => 'textarea', field => 'Content', name => 'p_content', rows => 10, cols => 40, value => '' },
        { type => 'select', field => 'Type', name => 't_id', options => \@options },
        { type => 'submit', field => 'Actions', value => 'Add Page', cancel => "edit_c_list.html?c_id=$c_id" },
    ]
&>

%# ----------------------------------------------------------------------------
