%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $c_id
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Content');
    my $content = $model->sel_content({ c_id => $c_id });
    unless ( defined $content ) {
        $m->redirect('edit_c_list.html');
        return;
    }
    $m->redirect('edit_c_list.html') unless exists $perms->{$content->{_view}};
    my $pages = $model->sel_page_all_in({ c_id => $c_id });
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Page List</h1>

<p><a href="edit_c_list.html">&laquo; Back to Section List</a></p>

<h2>Content: <% $content->{c_name} | h %> - <% $content->{c_title} | h %></h2>

% if ( exists $perms->{$content->{_admin}} ) {
<p>
    * <a href="edit_p_add.html?c_id=<% $content->{c_id} | u %>">Add Page &raquo;</a>
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Page Name</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $page ( @$pages ) {
        <tr class="r<% $row=1-$row %>">
            <td><% $page->{p_name} | h %> (<% $page->{t_name} %>)</td>
            <td>
%         if ( exists $perms->{$page->{_edit}} ) {
                * <a href="edit_p_edit.html?p_id=<% $page->{p_id} | u %>">Edit Page</a><br />
%             if ( exists $perms->{$page->{_admin}} ) {
                * <a href="edit_p_del.html?p_id=<% $page->{p_id} | u %>">Delete</a><br />
%             }
%         } else {
                -
%         }
            </td>
        </tr>
% }
% unless ( @$pages ) {
        <tr class="r0">
            <td>No pages here!</td>
            <td>
                * <a href="edit_p_add.html?c_id=<% $content->{c_id} | u %>">Add Page</a>
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
