%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $f_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Dir');
    my $file = $model->sel_file({ f_id => $f_id });

    $m->redirect('edit-f-list.html') unless defined $file;

    $model->del_file({ f_id => $f_id });

    $m->redirect("edit-f-list.html?d_id=" . uri_escape($file->{d_id}));
    return;
</%init>
