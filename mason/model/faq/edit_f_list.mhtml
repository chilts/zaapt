%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $faqs = $model->sel_faq_all();
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>FAQ List</h1>

% if ( exists $my_roles->{super} ) {
<p>
    * <a href="edit_f_add.html">Add FAQ &raquo;</a><br />
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Name</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $faq ( @$faqs ) {
%     next unless exists $my_roles->{$faq->{_view}};
        <tr class="r<% $row=1-$row %>">
            <td>
                <% $faq->{f_name} | h %>
            </td>
            <td>
%         if ( exists $my_roles->{$faq->{_admin}} ) {
                * <a href="edit_f_edit.html?f_id=<% $faq->{f_id} | u %>">Edit Details</a><br />
%         }
%         if ( exists $my_roles->{$faq->{_edit}} ) {
                * <a href="edit_q_add.html?f_id=<% $faq->{f_id} | u %>">Add Question</a><br />
                * <a href="edit_q_list.html?f_id=<% $faq->{f_id} | u %>">Question List</a><br />
%         }
%         if ( exists $my_roles->{$faq->{_admin}} ) {
                * <a href="edit_f_del.html?f_id=<% $faq->{f_id} | u %>">Delete</a><br />
%         }
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
