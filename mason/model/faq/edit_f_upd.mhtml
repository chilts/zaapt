%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
</%once>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $f_id          => undef
    $f_name        => ''
    $f_title       => ''
    $f_description => ''
    $_admin        => undef
    $_view         => undef
    $_edit         => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $faq = $model->sel_faq({ f_id => $f_id });

    # program errors
    $m->redirect('edit_f_list.html') unless defined $faq;
    $m->redirect('edit_f_list.html') unless exists $perms->{$faq->{_admin}};

    # user errors
    my $err = [];

    unless ( Zaapt::Utils::Valid::is_valid_name($f_name) ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $f_description =~ s{\r}{}gxms;

    unless ( @$err ) {
        $model->upd_faq({
            f_name        => $f_name,
            f_title       => $f_title,
            f_description => $f_description,
            _admin        => $_admin,
            _view         => $_view,
            _edit         => $_edit,
            f_id          => $f_id,
        });
        $m->redirect("edit_f_list.html");
        return;
    }

    my $options = $m->comp('/zaapt/common/permission_options.mhtml', zaapt => $zaapt);
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit an FAQ</h1>

<p><a href="edit_f_list.html">&laquo; Back to FAQ List</a></p>

<h2>Faq: <% $faq->{f_name} | h %> - <% $faq->{f_title} | h %></h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_f_upd.html', elements => [
        { type => 'hidden', name => 'f_id', value => $f_id },
        { type => 'text', field => 'Name', name => 'f_name', size => 40, value => $faq->{f_name} },
        { type => 'text', field => 'Title', name => 'f_title', size => 40, value => $faq->{f_title} },
        { type => 'textarea', field => 'Description', name => 'f_description', rows => 10, cols => 40, value => $faq->{f_description} },
        { type => 'select', field => 'Admin Perm', name => '_admin', options => $options, selected => $faq->{_admin} },
        { type => 'select', field => 'View Perm', name => '_view', options => $options, selected => $faq->{_view} },
        { type => 'select', field => 'Edit Perm', name => '_edit', options => $options, selected => $faq->{_moderator} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_f_list.html' },
    ]
&>

%# ----------------------------------------------------------------------------
