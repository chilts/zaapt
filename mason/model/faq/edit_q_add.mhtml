%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $f_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $faq = $model->sel_faq({ f_id => $f_id });
    unless ( defined $faq ) {
        $m->redirect('edit_f_list.html');
        return;
    }
    my $page_types = $zaapt->get_model('Common')->sel_type_all();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Question</h1>

<p><a href="edit_q_list.html?f_id=<% $f_id | u %>">&laquo; Back to Question List</a></p>

<h2>FAQ: <% $faq->{f_name} | h %> - '<% $faq->{f_title} | h %>'</h2>

<& /zaapt/common/form.mhtml, action => 'edit_q_ins.html', elements => [
        { type => 'hidden', name => 'f_id', value => $f_id },
        { type => 'text', field => 'Question', name => 'q_question', size => 40, value => '' },
        { type => 'textarea', field => 'Answer', name => 'q_answer', rows => 10, cols => 40, value => '' },
        { type => 'select', field => 'Type', name => 't_id', options => \@options },
        { type => 'submit', field => 'Actions', value => 'Add', cancel => 'edit_f_list.html?f_id=' . uri_escape($f_id) },
    ]
&>

% if ( 0 ) {
<pre>
% print Data::Dumper->Dump([\@options], ['o']);
</pre>
% }

%# ----------------------------------------------------------------------------
