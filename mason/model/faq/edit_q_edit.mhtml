%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $q_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $question = $model->sel_question({ q_id => $q_id });

    # check the error conditions first - we need to recover

    $m->redirect('edit_f_list.html') unless defined $question;

    $m->redirect('edit_q_list.html?f_id=$question->{f_id}') unless exists $my_roles->{$question->{_edit}};

    my $page_types = $zaapt->get_model('Common')->sel_type_all();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit a Question</h1>

<p><a href="edit_q_list.html?f_id=<% $question->{f_id} | u %>">&laquo; Back to Question List</a></p>

<h2>FAQ: '<% $question->{f_title} | h %>'</h2>

<& /zaapt/common/form.mhtml, action => 'edit_q_upd.html', elements => [
        { type => 'hidden', name => 'q_id', value => $question->{q_id} },
        { type => 'read', field => 'FAQ', name => 'f_name', value => $question->{f_name} },
        { type => 'text', field => 'Question', name => 'q_question', size => 40, value => $question->{q_question} },
        { type => 'textarea', field => 'Answer', name => 'q_answer', rows => 10, cols => 40, value => $question->{q_answer} },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $question->{t_id} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_q_list.html?f_id=' . uri_escape($question->{f_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
