%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $q_id
    $q_question => ''
    $q_answer   => ''
    $t_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $question = $model->sel_question({ q_id => $q_id });

    # program errors
    $m->redirect('edit_f_list.html') unless defined $question;
    $m->redirect("edit_q_list.html?q_id=" . uri_escape($q_id)) unless exists $my_roles->{$question->{_edit}};

    # check this type exists
    unless ( $zaapt->get_model('Common')->sel_type({ t_id => $t_id }) ) {
        $m->redirect("edit_q_list.html?q_id=" . uri_escape($q_id));
    }

    # user errors
    my $err = [];
    if ( $q_question eq '' ) {
        push @$err, "Please specify the question";
    }

    $q_answer =~ s{\r}{}gxms;

    unless ( @$err ) {
        $model->upd_question({
            q_question => $q_question,
            q_answer   => $q_answer,
            t_id       => $t_id,
            q_id       => $q_id,
        });
        $m->redirect("edit_q_list.html?f_id=" . uri_escape($question->{f_id}));
        return;
    }

    my $page_types = $zaapt->get_model('Common')->sel_type_all();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit a Question</h1>

<p><a href="edit_q_list.html?f_id=<% $question->{f_id} | u %>">&laquo; Back to Question List</a></p>

<h2>FAQ: <% $question->{f_name} | h %> - <% $question->{f_title} | h %></h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_q_ins.html', elements => [
        { type => 'hidden', name => 'q_id', value => $q_id },
        { type => 'text', field => 'Question', name => 'q_question', size => 40, value => $q_question },
        { type => 'textarea', field => 'Answer', name => 'q_answer', rows => 10, cols => 40, value => $q_answer },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $t_id },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_q_list.html?f_id=' . uri_escape($question->{f_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
