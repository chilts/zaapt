%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $f_name
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Faq');
    my $faq = $model->sel_faq_using_name({ f_name => $f_name });

    unless ( defined $faq ) {
        die "FAQ '$f_name' not found.";
        return;
    }

    my $questions = $model->sel_question_all_in({ f_id => $faq->{f_id} });
</%init>
%# ----------------------------------------------------------------------------
<& render-view-index.mhtml,
    faq       => $faq,
    questions => $questions,
&>
%# ----------------------------------------------------------------------------
