%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
</%once>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $f_name        => ''
    $f_title       => ''
    $f_description => ''
    $f_show        => undef
    $_admin        => undef
    $_view         => undef
    $_moderator    => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Forum');

    # program errors
    $m->redirect('edit_f_list.html') unless exists $perms->{super};

    # user errors
    my $err = [];
    unless ( Zaapt::Utils::Valid::is_valid_name($f_name) ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    # no Forum of this name should exist
    unless ( @$err ) {
        my $forum = $model->sel_forum_using_name({ f_name => $f_name });
        push @$err, "Forum name '$f_name' already exists." if defined $forum;
    }

    unless ( Zaapt::Utils::Valid::is_non_negative_integer($f_show, 'Show') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $f_description =~ s{\r}{}gxms;

    unless ( @$err ) {
        $model->ins_forum({
            f_name        => $f_name,
            f_title       => $f_title,
            f_description => $f_description,
            f_show        => $f_show,
            _admin        => $_admin,
            _view         => $_view,
            _moderator    => $_moderator,
        });
        $m->redirect("edit_f_list.html");
        return;
    }

    my $roles = $zaapt->get_model('Account')->sel_role_all();
    my @options = map { { value => $_->{r_id}, text => $_->{r_name} } } @$roles;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Forum</h1>

<p><a href="edit_f_list.html">&laquo; Back to Forum List</a></p>

<h2>Enter details...</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_f_ins.html', elements => [
        { type => 'text', field => 'Name', name => 'f_name', size => 40, value => $f_name },
        { type => 'text', field => 'Title', name => 'f_title', size => 40, value => $f_title },
        { type => 'textarea', field => 'Description', name => 'f_description', rows => 10, cols => 40, value => $f_description },
        { type => 'text', field => 'Show', name => 'f_show', size => 3, value => $f_show },
        { type => 'select', field => 'Admin Role', name => '_admin', options => \@options, selected => $_admin },
        { type => 'select', field => 'View Role', name => '_view', options => \@options, selected => $_view },
        { type => 'select', field => 'Moderator Role', name => '_moderator', options => \@options, selected => $_moderator },
        { type => 'submit', field => 'Actions', value => 'Add Forum', cancel => 'edit_f_list.html' },
    ]
&>

%# ----------------------------------------------------------------------------
