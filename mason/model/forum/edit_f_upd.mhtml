%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
</%once>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $f_id          => undef
    $f_name        => ''
    $f_title       => ''
    $f_description => ''
    $f_show        => undef
    $_admin        => undef
    $_view         => undef
    $_moderator    => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Forum');
    my $forum = $model->sel_forum({ f_id => $f_id });

    # program errors
    $m->redirect('edit_f_list.html') unless defined $forum;
    $m->redirect('edit_f_list.html') unless exists $perms->{$forum->{_admin}};

    # user errors
    my $err = [];
    unless ( Zaapt::Utils::Valid::is_valid_name($f_name) ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    unless ( Zaapt::Utils::Valid::is_non_negative_integer($f_show, 'Show') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $f_description =~ s{\r}{}gxms;

    unless ( @$err ) {
        $model->upd_forum({
            f_name        => $f_name,
            f_title       => $f_title,
            f_description => $f_description,
            f_show        => $f_show,
            _admin        => $_admin,
            _view         => $_view,
            _moderator    => $_moderator,
            f_id          => $f_id,
        });
        $m->redirect("edit_f_list.html");
        return;
    }

    my $options = $m->comp('/zaapt/common/permission_options.mhtml', zaapt => $zaapt);
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit a Forum</h1>

<p><a href="edit_f_list.html">&laquo; Back to Forum List</a></p>

<h2>Forum: <% $forum->{f_name} | h %> - <% $forum->{f_title} | h %></h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_f_upd.html', elements => [
        { type => 'text', field => 'Name', name => 'f_name', size => 40, value => $f_name },
        { type => 'text', field => 'Title', name => 'f_title', size => 40, value => $f_title },
        { type => 'textarea', field => 'Description', name => 'f_description', rows => 10, cols => 40, value => $f_description },
        { type => 'text', field => 'Show', name => 'f_show', size => 3, value => $f_show },
        { type => 'select', field => 'Admin Perm', name => '_admin', options => $options, selected => $_admin },
        { type => 'select', field => 'View Perm', name => '_view', options => $options, selected => $_view },
        { type => 'select', field => 'Moderator Perm', name => '_moderator', options => $options, selected => $_moderator },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_f_list.html' },
    ]
&>

%# ----------------------------------------------------------------------------
