%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $a          => ''
    $f_name
    $page       => ''
    $a_id       => undef
    $tp_subject => ''
    $p_message  => ''
    $t_id       => undef
    $p_id       => undef
    $p          => 1
    $tp_id      => undef
    $last       => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    if ( $page eq '' ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }

    # we can let these other pages do this, but check that $p makes sense
    $p = 1 unless $p =~ m{ \A \d+ \z }xms;

    if ( $page eq 'index' ) {
        # main index page
        $m->comp('/zaapt/model/forum/user-forum.mhtml',
            zaapt      => $zaapt,
            a          => $a,
            f_name     => $f_name,
            a_id       => $a_id,
            tp_subject => $tp_subject,
            p_message  => $p_message,
            t_id       => $t_id,
            p          => $p,
            tp_id      => $tp_id,
            last       => $last,
        );
    }
    elsif ( $page eq 'moderator-edit-post' ) {
        # the moderator is editing the post
        $m->comp('/zaapt/model/forum/moderator-edit-post.mhtml',
            zaapt      => $zaapt,
            my_roles   => $my_roles,
            a          => $a,
            f_name     => $f_name,
            p_id       => $p_id,
            p_message  => $p_message,
            p          => $p,
        );
    }
    elsif ( $page eq 'moderator-del-post' ) {
        # main index page
        $m->comp('/zaapt/model/forum/moderator-del-post.mhtml',
            zaapt      => $zaapt,
            my_roles   => $my_roles,
            a          => $a,
            f_name     => $f_name,
            p_id       => $p_id,
            p          => $p,
        );
    }
    else {
        $m->comp( '/zaapt/model/forum/user-topic.mhtml',
            zaapt     => $zaapt,
            my_roles  => $my_roles,
            a         => $a,
            f_name    => $f_name,
            tp_id     => $page,
            a_id      => $a_id,
            p_message => $p_message,
            t_id      => $t_id,
            p         => $p,
            last       => $last,
        );
    }
    return;
</%init>
%# ----------------------------------------------------------------------------
