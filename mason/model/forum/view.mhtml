%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $f_name     => undef
    $page       => ''
    $t_id       => undef
    $t_name     => undef
    $p          => 1
    $id         => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    if ( $page eq '' ) {
        $m->clear_buffer();
        $m->abort(404);
        return;
    }

    # we can let these other pages do this, but check that $p makes sense
    $p = 1 unless $p =~ m{ \A \d+ \z }xms;

    if ( $page eq 'index' ) {
        # main index page
        $m->comp('/zaapt/model/forum/view-forum.mhtml',
            zaapt      => $zaapt,
            f_name     => $f_name,
            t_id       => $t_id,
            p          => $p,
        );
    }
    elsif ( $page eq 'info' ) {
        # main index page
        $m->comp('/zaapt/model/forum/view-info.mhtml',
            zaapt      => $zaapt,
            a_id       => $id,
            t_name     => $t_name,
        );
    }
    else {
        $m->comp( '/zaapt/model/forum/view-topic.mhtml',
            zaapt     => $zaapt,
            f_name    => $f_name,
            tp_id     => $page,
            t_id      => $t_id,
            p         => $p,
        );
    }
    return;
</%init>
%# ----------------------------------------------------------------------------
