%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Friend');

    my $friends = $model->sel_friend_for({ a_id => $id });
    my $tos = $model->sel_friend_to({ t_id => $id });
</%init>
%# ----------------------------------------------------------------------------
<& view-info.render.mhtml,
    friends => $friends,
    tos     => $tos,
&>
%# ----------------------------------------------------------------------------
