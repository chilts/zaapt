<%args>
    $zaapt
    $id
    $page
</%args>
%# ----------------------------------------------------------------------------
<%init>
    if ( $page eq 'info' ) {
        $m->comp('/zaapt/model/friend/view-info.mhtml', zaapt => $zaapt, id => $id);
    }
    else {
        $m->clear_buffer();
        $m->abort(404);
    }
    return;
</%init>
