<%init>
    my $model = $zaapt->get_model('Gallery');
    my $field = $model->sel_field({ f_id => $f_id });

    $m->redirect('edit-f-list.html') unless defined $field;

    $model->del_field({ f_id => $f_id });

    $m->redirect("edit-f-list.html");
    return;
</%init>
