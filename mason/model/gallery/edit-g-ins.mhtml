%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $g_name        => ''
    $g_title       => ''
    $g_description => ''
    $g_path        => ''
    $g_original    => ''
    $g_webdir      => ''
    $g_show        => ''
    $g_extractexif => ''
    $_admin        => ''
    $_view         => ''
    $_edit         => ''
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
    use Zaapt::Utils::Conv;
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Gallery');

    $m->redirect('edit-g-list.html') unless exists $my_roles->{super};

    my $err = [];

    unless ( Zaapt::Utils::Valid::is_valid_name($g_name, 'Name') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    # check that path, path/original, mapping are all valid dir-like names
    unless ( Zaapt::Utils::Valid::has_content($g_path, 'Path') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }
    unless ( Zaapt::Utils::Valid::has_content($g_path, 'Original') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }
    unless ( Zaapt::Utils::Valid::has_content($g_webdir, 'Web Mapping') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    unless ( Zaapt::Utils::Valid::is_non_negative_integer($g_show, 'Show') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    # no Gallery of this name should already exist
    unless ( @$err ) {
        my $gallery = $model->sel_gallery_using_name({ g_name => $g_name });
        push @$err, "Gallery name '$g_name' already exists." if defined $gallery;
    }

    $g_extractexif = Zaapt::Utils::Conv::to_bool( $g_extractexif );

    unless ( @$err ) {
        $model->ins_gallery({
            g_name        => $g_name,
            g_title       => $g_title,
            g_description => $g_description,
            g_path        => $g_path,
            g_original    => $g_original,
            g_webdir      => $g_webdir,
            g_show        => $g_show,
            g_extractexif => $g_extractexif,
            _admin        => $_admin,
            _view         => $_view,
            _edit         => $_edit,
        });
        $m->redirect("edit-g-list.html");
        return;
    }

    my $roles = $zaapt->get_model('Account')->sel_all_roles();
    my @options = map { { value => $_->{r_id}, text => $_->{r_name} } } @$roles;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Gallery</h1>

<p><a href="edit-g-list.html">&laquo; Back to Gallery List</a></p>

<h2>Gallery: ?</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit-g-ins.html', elements => [
        { type => 'text', field => 'Name', name => 'g_name', size => 40, value => $g_name },
        { type => 'text', field => 'Title', name => 'g_title', size => 40, value => $g_title },
        { type => 'textarea', field => 'Description', name => 'g_description', rows => 10, cols => 40, value => $g_description },

        { type => 'text', field => 'Base Path', name => 'g_path', value => $g_path },
        { type => 'note', value => "Note: This is the base dir where <strong>all</strong> uploaded pictures will be stored." },
        { type => 'text', field => 'Original', name => 'g_original', value => $g_original },
        { type => 'note', value => "Note: This dir is relative to the above base path." },
        { type => 'text', field => 'Web Mapping:', name => 'g_webdir', value => $g_webdir },
        { type => 'note', value => "Note: This path is the web address where the above Base Path is mapped to." },

        { type => 'text', field => 'Show', name => 'g_show', size => 3, value => $g_show },
        { type => 'note', value => "Note: Show is used just for the main index." },
        { type => 'check', field => 'Extract Exif?', name => 'g_extractexif', checked => $g_extractexif },

        { type => 'select', field => 'Admin Role', name => '_admin', options => \@options },
        { type => 'note', value => "Note: Allows this user to delete this entire gallery." },
        { type => 'select', field => 'View Role', name => '_view', options => \@options },
        { type => 'note', value => "Note: Allows this user to view all gallery pictures." },
        { type => 'select', field => 'Edit Role', name => '_edit', options => \@options },
        { type => 'note', value => "Note: Allows this user to add, edit and delete blog entries and labels." },

        { type => 'submit', field => 'Actions', value => 'Add Gallery', cancel => 'edit-g-list.html' },
    ]
&>
%# ----------------------------------------------------------------------------
