%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $r_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Gallery');
    my $required = $model->sel_required({ r_id => $r_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit-g-list.html') unless defined $required;
    $m->redirect('edit-g-list.html') unless exists $perms->{$required->{_admin}};

    $model->del_required({ r_id => $r_id });

    $m->redirect("edit-r-list.html?g_id=" . uri_escape($required->{g_id}));
    return;
</%init>
%# ----------------------------------------------------------------------------
