%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $s_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Gallery');
    my $size = $model->sel_size({ s_id => $s_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit-g-list.html') unless defined $size;
    $m->redirect('edit-g-list.html') unless exists $my_roles->{$size->{_admin}};

    $model->del_size({ s_id => $s_id });

    $m->redirect("edit-s-list.html?g_id=" . uri_escape($size->{g_id}));
    return;
</%init>
%# ----------------------------------------------------------------------------
