%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $g_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Gallery');
    my $gallery = $model->sel_gallery({ g_id => $g_id });
    unless ( defined $gallery ) {
        $m->redirect('edit-g-list.html');
        return;
    }

    $m->redirect('edit-g-list.html') unless exists $my_roles->{$gallery->{_view}};
    my $sizes = $model->sel_size_all_in({ g_id => $g_id });
</%init>
%# ----------------------------------------------------------------------------
<h1>Size List</h1>

<p><a href="edit-g-list.html">&laquo; Back to Gallery List</a></p>

<& edit-render-g-title.mhtml, gallery => $gallery &>

<p>
% if ( exists $my_roles->{$gallery->{_admin}} ) {
    * <a href="edit-s-add.html?g_id=<% $gallery->{g_id} | u %>">Add Size &raquo;</a><br />
    * <a href="edit-s-regenerate.html">Regenerate All Sizes&raquo;</a></p><br />
% } else {
    * No Actions
% }
</p>

<&| /zaapt/common/admin/table-edit.mhtml, title => 'Size' &>

% my $r = 1;
% foreach my $size ( @$sizes ) {
        <tr class="r<% $r++%2 %>">
            <td>
                <% $size->{s_size} | h %> pixels<br />
                <strong><% $size->{s_path} | h %>/</strong><br />
            </td>
            <td>
%         if ( exists $my_roles->{$gallery->{_admin}} ) {
                * <a href="edit-s-edit.html?s_id=<% $size->{s_id} | u %>">Edit Size</a><br />
                * <a href="edit-s-del.html?s_id=<% $size->{s_id} | u %>">Delete</a><br />
%         } else {
                -
%         }
            </td>
        </tr>
% }
% unless ( @$sizes ) {
        <tr class="r0">
            <td>no sizes defined for this gallery</td>
            <td>
                * <a href="edit-s-add.html?g_id=<% $gallery->{g_id} | u %>">Add Size</a>
            </td>
        </tr>
% }

</&>

% if ( 0 ) {
<pre>
% print Dumper($sizes);
</pre>
% }

%# ----------------------------------------------------------------------------
