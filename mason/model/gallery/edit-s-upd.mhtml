%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $s_id
    $s_title
    $s_size
    $s_path
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Gallery');
    my $size = $model->sel_size({ s_id => $s_id });
    unless ( defined $size ) {
        $m->redirect('edit-g-list.html');
        return;
    }

    $m->redirect('edit-g-list.html') unless exists $my_roles->{$size->{_admin}};

    my $err = [];

    unless ( Zaapt::Utils::Valid::is_positive_integer($s_size, 'size') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    unless ( Zaapt::Utils::Valid::has_content($s_path, 'path') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    # check that path, path/original, mapping are all valid dir-like names
    # ???

    unless ( @$err ) {
        $model->upd_size({
            s_size => $s_size,
            s_path => $s_path,
            s_id   => $s_id,
        });
        $m->redirect('edit-s-list.html?g_id=' . uri_escape($size->{g_id}));
        return;
    }

</%init>
%# ----------------------------------------------------------------------------
<h1>Add a Size</h1>

<p><a href="edit-s-list.html?g_id=<% $size->{g_id} | u %>">&laquo; Back to Size List</a></p>

<& edit-render-g-title.mhtml, gallery => $size &>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit-s-ins.html', elements => [
        { type => 'hidden', name => 's_id', value => $size->{s_id} },
        { type => 'text', field => 'Title', name => 's_title', value => $size->{s_title} },
        { type => 'text', field => 'Size (pixels)', name => 's_size', value => $s_size },
        { type => 'note', value => "Note: This is for both (x,y). The picture will be scaled correctly." },
        { type => 'text', field => 'Path', name => 's_path', value => $s_path },
        { type => 'note', value => "Note: This dir is relative to the gallery's main path." },
        { type => 'submit', field => 'Actions', value => 'Add', cancel => 'edit-s-list.html?g_id=' . uri_escape($size->{g_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
