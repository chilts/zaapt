%# ----------------------------------------------------------------------------
<%args>
    $gallery
    $picture
    $details
</%args>
%# ----------------------------------------------------------------------------
<h1><% $picture->{p_title} | h %></h1>

<img style="display: block; margin: auto;" src="<% $gallery->{g_webdir} %>/o/<% $picture->{p_name} %>.jpg" />

<p><% $picture->{p_description} | h %></p>

<h3>Details</h3>

% if ( @$details ) {
<dl>
%     foreach my $detail ( @$details ) {
    <dt><% $detail->{f_info} %></dt>
    <dd><% $detail->{d_value} %></dd>
%     }
</dl>
% }

<p class="footnote"><& /zaapt/common/datetime.mhtml, datetime => $picture->{p_inserted} &></p>
%# ----------------------------------------------------------------------------
