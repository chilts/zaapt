%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $i_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');

    my $item = $model->sel_item({ i_id => $i_id });
    $m->redirect('edit_m_list.html') unless defined $item;

    $m->redirect('edit_m_list.html') unless exists $my_roles->{$item->{_edit}};
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit an Item</h1>

<p><a href="edit_i_list.html?m_id=<% $item->{m_id} | h %>">&laquo; Back to Item List</a></p>

<h2>Menu: <% $item->{m_name} | h %> - '<% $item->{m_title} | h %>'</h2>

<&  /zaapt/common/form.mhtml, action => 'edit_i_upd.html', elements => [
        { type => 'hidden', name => 'i_id', value => $item->{i_id} },
        { type => 'read', field => 'Menu', name => 'm_name', value => $item->{m_name} },
        { type => 'text', field => 'Level', name => 'i_level', size => 2, value => $item->{i_level} },
        { type => 'text', field => 'URL', name => 'i_url', size => 40, value => $item->{i_url} },
        { type => 'textarea', field => 'Text', name => 'i_text', rows => 3, cols => 40, value => $item->{i_text} },
        { type => 'check', field => 'Is HTML?', name => 'i_ishtml', checked => $item->{i_ishtml} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => "edit_i_list.html?m_id=$item->{m_id}" },
    ]
&>

%# ----------------------------------------------------------------------------
