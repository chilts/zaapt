%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $m_id
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');
    my $menu = $model->sel_menu({ m_id => $m_id });
    unless ( defined $menu ) {
        $m->redirect('edit_m_list.html');
        return;
    }
    $m->redirect('edit_m_list.html') unless exists $my_perms->{$menu->{_view}};
    my $items = $model->sel_item_all_in({ m_id => $m_id });
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Item List</h1>

<p><a href="edit_m_list.html">&laquo; Back to Menu List</a></p>

<h2>Menu: <% $menu->{m_name} | h %> - '<% $menu->{m_title} | h %>'</h2>

% if ( exists $my_perms->{$menu->{_admin}} ) {
<p>
    * <a href="edit_i_add.html?m_id=<% $menu->{m_id} | u %>">Add Item &raquo;</a>
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Item</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $item ( @$items ) {
        <tr class="r<% $row=1-$row %>">
            <td>
                <strong>(<% $item->{i_id} | h %>)</strong> [<% $item->{i_level} ? '+' x $item->{i_level} : 'off' | h %>] <strong><% $item->{i_url} | h %></strong><br />
                <% $item->{i_text} | h %>  <strong>(<% $item->{i_ishtml} ? 'html' : 'text' %>)</strong>
            </td>
            <td>
%         if ( exists $my_perms->{$item->{_edit}} ) {
                * <a href="edit_i_edit.html?i_id=<% $item->{i_id} | u %>">Edit Item</a><br />
%             if ( exists $my_perms->{$item->{_admin}} ) {
                * <a href="edit_i_del.html?i_id=<% $item->{i_id} | u %>">Delete</a><br />
                * Move <a href="edit_i_move_up.html?i_id=<% $item->{i_id} | u %>">Up</a> / <a href="edit_i_move_dn.html?i_id=<% $item->{i_id} | u %>">Dn</a><br />
%             }
%         } else {
                -
%         }
            </td>
        </tr>
% }
% unless ( @$items ) {
        <tr class="r0">
            <td>No items here!</td>
            <td>
                * <a href="edit_i_add.html?m_id=<% $menu->{m_id} | u %>">Add Item</a>
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
