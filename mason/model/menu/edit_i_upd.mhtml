%# ----------------------------------------------------------------------------
<%doc>
    This is the edit item for the 'Menu' model.
</%doc>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $i_id
    $i_level
    $i_url
    $i_text
    $i_ishtml => 0
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
    use Zaapt::Utils::Conv;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');
    my $item = $model->sel_item({ i_id => $i_id });

    my $err = [];

    # if there is no item, then we can't edit
    $m->redirect('edit.html') unless defined $item;

    # to edit this item, the user needs the '_edit' role
    $m->redirect('edit.html') unless exists $my_perms->{$item->{_edit}};

    unless ( Zaapt::Utils::Valid::is_non_negative_integer($i_level, 'Level') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    unless ( Zaapt::Utils::Valid::contains_something($i_url, 'URL') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $i_text = Zaapt::Utils::Conv::remove_cr( $i_text );
    unless ( Zaapt::Utils::Valid::contains_something($i_text, 'Text') ) {
        push @$err, Zaapt::Utils::Valid::err();
    }

    $i_ishtml = Zaapt::Utils::Conv::to_bool( $i_ishtml );

    unless ( @$err ) {
        $model->upd_item({
            i_id     => $i_id,
            i_level  => $i_level,
            i_url    => $i_url,
            i_text   => $i_text,
            i_ishtml => $i_ishtml,
        });
        $m->redirect("edit_i_list.html?m_id=$item->{m_id}");
        return;
    }
</%init>
%# ----------------------------------------------------------------------------
<h1>Editing: 'Menu'</h1>

<p><a href="edit_i_list.html?m_id=<% $item->{m_id} | h %>">&lt;&lt; Back to Item List</a></p>

<h2>Add a Item to <% $item->{m_name} | h %></h2>

<& /zaapt/common/err.mhtml, err => $err &>

<&  /zaapt/common/form.mhtml, action => 'edit_i_ins.html', elements => [
        { type => 'hidden', name => 'i_id', value => $i_id },
        { type => 'read', field => 'Menu', name => 'm_name', value => $item->{m_name} },
        { type => 'text', field => 'Level', name => 'i_level', size => 2, value => $i_level },
        { type => 'text', field => 'URL', name => 'i_url', size => 40, value => $i_url },
        { type => 'textarea', field => 'Text', name => 'i_text', rows => 3, cols => 40, value => $i_text },
        { type => 'check', field => 'Is HTML?', name => 'i_ishtml', checked => $i_ishtml },
        { type => 'submit', field => 'Actions', value => 'Add', cancel => "edit_m_list.html?m_id=$item->{m_id}" },
    ]
&>

%# ----------------------------------------------------------------------------
