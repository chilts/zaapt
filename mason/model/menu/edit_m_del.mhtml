%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $m_id
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');
    my $menu = $model->sel_menu({ m_id => $m_id });

    $m->redirect('edit_m_list.html') unless defined $menu;

    $m->redirect('edit_m_list.html') unless exists $my_perms->{$menu->{_admin}};

    $model->del_menu({ m_id => $m_id });

    $m->redirect("edit_m_list.html");
    return;
</%init>
%# ----------------------------------------------------------------------------
