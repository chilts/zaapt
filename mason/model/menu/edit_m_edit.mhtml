%# ----------------------------------------------------------------------------
<%once>
    use Zaapt::Utils::Valid;
</%once>
%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $m_id => undef
</%args>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');
    my $menu = $model->sel_menu({ m_id => $m_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit_m_list.html') unless defined $menu;
    $m->redirect('edit_m_list.html?m_id=$menu->{m_id}') unless exists $my_roles->{$menu->{_admin}};

    my $roles = $zaapt->get_model('Account')->sel_all_roles();
    my @options = map { { value => $_->{r_id}, text => $_->{r_name} } } @$roles;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit a Menu</h1>

<p><a href="edit_m_list.html">&laquo; Back to Menu List</a></p>

<h2>Menu: <% $menu->{m_name} | h %> - <% $menu->{m_title} | h %></h2>

<& /zaapt/common/form.mhtml, action => 'edit_m_upd.html', elements => [
        { type => 'hidden', name => 'm_id', value => $m_id },
        { type => 'text', field => 'Name', name => 'm_name', size => 40, value => $menu->{m_name} },
        { type => 'text', field => 'Title', name => 'm_title', size => 40, value => $menu->{m_title} },
        { type => 'textarea', field => 'Description', name => 'm_description', rows => 10, cols => 40, value => $menu->{m_description} },
        { type => 'select', field => 'Admin Role', name => '_admin', options => \@options, selected => $menu->{_admin} },
        { type => 'select', field => 'View Role', name => '_view', options => \@options, selected => $menu->{_view} },
        { type => 'select', field => 'Edit Role', name => '_edit', options => \@options, selected => $menu->{_edit} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_m_list.html' },
    ]
&>

%# ----------------------------------------------------------------------------
