%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('Menu');
    my $menus = $model->sel_menu_all();
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Menu List</h1>

% if ( exists $my_roles->{super} ) {
<p>
    * <a href="edit_m_add.html">Add Menu &raquo;</a><br />
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Name</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $menu ( @$menus ) {
%     next unless exists $my_roles->{$menu->{_view}};
        <tr class="r<% $row=1-$row %>">
            <td>
                <% $menu->{m_name} | h %>
            </td>
            <td>
%         if ( exists $my_roles->{$menu->{_admin}} ) {
                * <a href="edit_m_edit.html?m_id=<% $menu->{m_id} | u %>">Edit Details</a><br />
                * <a href="edit_i_add.html?m_id=<% $menu->{m_id} | u %>">Add Item</a><br />
%         }
                * <a href="edit_i_list.html?m_id=<% $menu->{m_id} | u %>">List/Edit</a><br />
%         if ( exists $my_roles->{$menu->{_admin}} ) {
                * <a href="edit_m_del.html?m_id=<% $menu->{m_id} | u %>">Delete</a><br />
%         }
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
