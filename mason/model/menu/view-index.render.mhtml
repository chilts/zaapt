%# ----------------------------------------------------------------------------
<%args>
    $items
</%args>
%# ----------------------------------------------------------------------------
% if ( @$items ) {
<ul>
%     foreach my $item ( @$items ) {
    <li>
        <% '+' x $item->{i_level} %>
        <a href="<% $item->{i_url} | u %>">
%         if ( $item->{i_ishtml} ) {
            <% $item->{i_text} %>
%         } else {
            <% $item->{i_text} | h %>
%         }
        </a>
    </li>
%     }
</ul>
% }
%# ----------------------------------------------------------------------------
