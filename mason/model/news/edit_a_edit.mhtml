%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_perms
    $a_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('News');
    my $article = $model->sel_article({ a_id => $a_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit_n_list.html') unless defined $article;
    $m->redirect('edit_a_list.html?n_id=' . uri_escape($article->{n_id})) unless exists $my_perms->{$article->{_edit}};

    my $page_types = $zaapt->get_model('Common')->sel_type_all();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$page_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit an Article</h1>

<p><a href="edit_a_list.html?n_id=<% $article->{n_id} | u %>">&laquo; Back to Article List</a></p>

<h2>News: '<% $article->{n_title} | h %>'</h2>

<& /zaapt/common/form.mhtml, action => 'edit_a_upd.html', elements => [
        { type => 'hidden', name => 'a_id', value => $article->{a_id} },
        { type => 'read', field => 'News', name => 'n_name', value => $article->{n_name} },
        { type => 'text', field => 'Title', name => 'a_title', size => 40, value => $article->{a_title} },
        { type => 'textarea', field => 'Intro', name => 'a_intro', rows => 5, cols => 40, value => $article->{a_intro} },
        { type => 'read', value => 'Note: The intro field is always plain text.' },
        { type => 'textarea', field => 'Article', name => 'a_article', rows => 10, cols => 40, value => $article->{a_article} },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $article->{t_id} },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_a_list.html?n_id=' . uri_escape($article->{n_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
