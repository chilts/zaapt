%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $n_id
    $a_title     => ''
    $a_intro     => ''
    $a_article   => ''
    $t_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
    use Zaapt::Utils::Valid;
    use Zaapt::Utils::Conv;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('News');
    my $news = $model->sel_news({ n_id => $n_id });

    # check the error conditions first - we need to recover

    # this content section firstly needs to exist to be able to add a page
    $m->redirect('edit_n_list.html') unless defined $news;

    # to insert a question, '_admin' is required
    $m->redirect('edit_n_list.html') unless exists $my_roles->{$news->{_admin}};

    # check this type exists
    unless ( $zaapt->get_model('Common')->sel_type({ t_id => $t_id }) ) {
        $m->redirect('edit_n_list.html');
    }

    # now we're into the normal user errors

    my $err = [];

    # some data manipulation
    $a_intro = Zaapt::Utils::Conv::remove_cr( $a_intro );
    $a_article = Zaapt::Utils::Conv::remove_cr( $a_article );

    unless ( @$err ) {
        $model->ins_article({
            n_id        => $n_id,
            a_title     => $a_title,
            a_intro     => $a_intro,
            a_article   => $a_article,
            t_id        => $t_id,
        });
        $m->redirect('edit_a_list.html?n_id=' . uri_escape($n_id));
        return;
    }

    my $paga_types = $zaapt->get_model('Common')->sel_all_types();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$paga_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Add an Article</h1>

<p><a href="edit_a_list.html?n_id=<% $n_id | u %>">&laquo; Back to Article List</a></p>

<h2>News: '<% $news->{n_title} | h %>'</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_a_ins.html', elements => [
        { type => 'hidden', name => 'n_id', value => $n_id },
        { type => 'read', field => 'News', name => 'n_name', value => $news->{n_name} },
        { type => 'text', field => 'Title', name => 'a_title', size => 40, value => $a_title },
        { type => 'textarea', field => 'Intro', name => 'a_intro', rows => 10, cols => 40, value => $a_intro },
        { type => 'read', value => 'Note: The intro field is always plain text.' },
        { type => 'textarea', field => 'Article', name => 'a_article', rows => 10, cols => 40, value => $a_article },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $t_id },
        { type => 'submit', field => 'Actions', value => 'Add Article', cancel => 'edit_a_list.html?n_id=' . uri_escape($n_id) },
    ]
&>

%# ----------------------------------------------------------------------------
