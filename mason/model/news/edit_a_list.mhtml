%# --- ARGS -------------------------------------------------------------------
<%args>
    $zaapt
    $perms
    $n_id
</%args>
%# --- INIT -------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('News');
    my $news = $model->sel_news({ n_id => $n_id });
    unless ( defined $news ) {
        $m->redirect('edit_n_list.html');
        return;
    }
    $m->redirect('edit_n_list.html') unless exists $perms->{$news->{_view}};
    my $articles = $model->sel_article_all_in({ n_id => $n_id });
</%init>
%# --- HTML -------------------------------------------------------------------
<h1>Article List</h1>

<p><a href="edit_n_list.html">&laquo; Back to News List</a></p>

<h2>News: '<% $news->{n_title} | h %>'</h2>

% if ( exists $perms->{$news->{_admin}} ) {
<p>
    * <a href="edit_a_add.html?n_id=<% $news->{n_id} | u %>">Add Article &raquo;</a>
</p>
% }

<table class="edit">
    <thead>
        <tr>
            <th class="list">Article</th>
            <th class="action">Actions</th>
        </tr>
    </thead>
    <tbody>
% my $row = 1;
% foreach my $article ( @$articles ) {
        <tr class="r<% $row=1-$row %>">
            <td><strong>(<% $article->{a_id} | h %>)</strong> <% $article->{a_title} | h %> (<% $article->{a_inserted} | h %>)</td>
            <td>
%         if ( exists $perms->{$news->{_edit}} ) {
                * <a href="edit_a_edit.html?a_id=<% $article->{a_id} | u %>">Edit Article</a><br />
%             if ( exists $perms->{$news->{_admin}} ) {
                * <a href="edit_a_del.html?a_id=<% $article->{a_id} | u %>">Delete</a><br />
%             }
%         } else {
                -
%         }
            </td>
        </tr>
% }
% unless ( @$articles ) {
        <tr class="r0">
            <td>No articles in this news!</td>
            <td>
                * <a href="edit_a_add.html?n_id=<% $news->{n_id} | u %>">Add Article</a>
            </td>
        </tr>
% }
    </tbody>
</table>

%# --- END --------------------------------------------------------------------
