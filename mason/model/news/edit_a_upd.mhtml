%# ----------------------------------------------------------------------------
<%args>
    $zaapt
    $my_roles
    $a_id
    $a_title     => ''
    $a_intro     => ''
    $a_article   => ''
    $t_id
</%args>
%# ----------------------------------------------------------------------------
<%once>
    use URI::Escape;
    use Zaapt::Utils::Valid;
    use Zaapt::Utils::Conv;
</%once>
%# ----------------------------------------------------------------------------
<%init>
    my $model = $zaapt->get_model('News');
    my $article = $model->sel_article({ a_id => $a_id });

    # check the error conditions first - we need to recover
    $m->redirect('edit_n_list.html') unless defined $article;
    $m->redirect('edit_a_list.html?n_id=' . uri_escape($article->{n_id})) unless exists $my_roles->{$article->{_edit}};

    # check this type exists
    unless ( $zaapt->get_model('Common')->sel_type({ t_id => $t_id }) ) {
        $m->redirect('edit_a_list.html?n_id=' . uri_escape($article->{n_id}));
    }

    # now we're into the normal user errors

    my $err = [];

    # some data manipulation
    $a_intro = Zaapt::Utils::Conv::remove_cr( $a_intro );
    $a_article = Zaapt::Utils::Conv::remove_cr( $a_article );

    unless ( @$err ) {
        $model->upd_article({
            a_title     => $a_title,
            a_intro     => $a_intro,
            a_article   => $a_article,
            t_id        => $t_id,
            a_id        => $a_id,
        });
        $m->redirect('edit_a_list.html?n_id=' . uri_escape($article->{n_id}));
        return;
    }

    my $paga_types = $zaapt->get_model('Common')->sel_all_types();
    my @options = map { { value => $_->{t_id}, text => $_->{t_name} } } @$paga_types;
</%init>
%# ----------------------------------------------------------------------------
<h1>Edit an Article</h1>

<p><a href="edit_a_list.html?n_id=<% $article->{n_id} | u %>">&laquo; Back to Article List</a></p>

<h2>News: '<% $article->{n_title} | h %>'</h2>

<& /zaapt/common/err.mhtml, err => $err &>

<& /zaapt/common/form.mhtml, action => 'edit_a_upd.html', elements => [
        { type => 'hidden', name => 'a_id', value => $article->{a_id} },
        { type => 'read', field => 'News', name => 'n_name', value => $article->{n_name} },
        { type => 'text', field => 'Title', name => 'a_title', size => 40, value => $a_title },
        { type => 'textarea', field => 'Intro', name => 'a_intro', rows => 5, cols => 40, value => $a_intro },
        { type => 'read', value => 'Note: The intro field is always plain text.' },
        { type => 'textarea', field => 'Article', name => 'a_article', rows => 10, cols => 40, value => $a_article },
        { type => 'select', field => 'Type', name => 't_id', options => \@options, selected => $t_id },
        { type => 'submit', field => 'Actions', value => 'Save', cancel => 'edit_a_list.html?n_id=' . uri_escape($article->{n_id}) },
    ]
&>

%# ----------------------------------------------------------------------------
