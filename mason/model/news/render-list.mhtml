%# ----------------------------------------------------------------------------
<%args>
    $articles
</%args>
%# ----------------------------------------------------------------------------
<%init>
    return unless defined $articles;

    $articles = [ $articles ] unless ref $articles eq 'ARRAY';

    foreach my $article ( $articles ) {
        $m->comp('render-article-summary.mhtml', article => $article);
    }
    return;
</%init>
